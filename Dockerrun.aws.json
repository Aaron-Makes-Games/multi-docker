{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "iamge": "aaron91h/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "iamge": "aaron91h/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "iamge": "aaron91h/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "iamge": "aaron91h/multi-nginx",
            "essential": true,
            "portMapping": [
                {
                    "hostPort": "80",
                    "containerPort": "80"
                }

            ],
            "links": ["client", "server"]
        }
    ]
}